#!/bin/sh

. ./testing.sh

evhttpget_test()
{
	opt="$1"
	target="$2"
	name="$3"

	filebase=evhttpget-data/"evhttpget-$name"
	output="$filebase".out
	packets="$filebase".json
	export ATLAS_TESTS=yes ATLAS_UNSAFE=yes
	r=$(cat "$output"; echo x); r=${r%?}
	testing "evhttpget-$name" "evhttpget $opt -R $packets $target" "$r" "" ""
}

evhttpget_test "-6" "http://www.ripe.json/" "6"
evhttpget_test "-4" "http://www.ripe.json/" "4"
evhttpget_test "-4 -A42" "http://www.ripe.json/" "A42"
evhttpget_test "-4 -b43 -A42" "http://www.ripe.json/" "b43"
evhttpget_test "-4" "https://www.ripe.json/" "https"
evhttpget_test "-4 -0" "http://www.ripe.json/" "0"
evhttpget_test "-4 -1" "http://www.ripe.json/" "1"
evhttpget_test "-4 --host foo" "https://www.ripe.json/" "host"
evhttpget_test "-4 --store-body 100" "https://www.ripe.json/" "body100"
evhttpget_test "-4 --user-agent foo" "https://www.ripe.json/" "user"
evhttpget_test "-4 --etim" "https://www.ripe.json/" "etim"
evhttpget_test "-4 --eetim" "https://www.ripe.json/" "eetim"

exit $FAILCOUNT

